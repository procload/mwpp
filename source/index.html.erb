<section class="who-we-are">
  <div class="who-we-are__content">
    <header class="section-header">
      <h3>Who We Are</h3>
    </header> <!-- /section-header -->
    <p>We're experts in <%= link_to "Residential", "#" %> and <%= link_to "Commercial", "#" %> construction projects.</p>
    <%= content_tag :button, "Contact Us To Get Started", class: "btn btn--primary" %>
  </div> <!--/who-we-are__content -->
</section> <!-- /who-we-are -->
<section class="featured-project">
  <div class="featured-project__content">
    <header class="section-header">
      <h3>Featured Residential Project</h3>
    </header> <!-- /section-header -->
    <h2>Kitchen Remodel</h2>
    <p><%= lorem.sentence %>.</p>
    <div class="featured-project__images">
      <%= link_to image_tag("temp/img-feature-res-1.jpg"), "#" %>
      <%= link_to image_tag("temp/img-feature-res-2.jpg"), "#" %>
      <%= link_to image_tag("temp/img-feature-res-3.jpg"), "#" %>
    </div> <!-- /featured-project-images -->
    <div class="project-services">
      <h4>Services</h4>
      <ul class="project-services__list">
        <%
            services = {
          "Demolition"   => "/",  
          "Construction" => "/",  
          "Painting"     => "/",  
          "Plumbing"     => "/"  
        }  
      %>
      <% services.each do |name, url| %>
          <%= content_tag :li, link_to(name, url) %>
      <% end %>
      </ul> <!-- /project-services__list -->
    </div> <!-- /project-services -->
    <div class="testimonial">
      <div class="testimonial__photo">
        <%= image_tag "temp/img-divya.png" %>
      </div> <!-- /photo -->
      <div class="testimonial__text">
        <p><%= lorem.sentences 2 %>.</p>
        <%= link_to "Divya Martin", "#", class: "testimonial__source" %>
      </div> <!-- /testimonial__text -->
    </div> <!-- /testimonial -->
    <%= content_tag :button, "View Complete Project", class: "btn btn--secondary" %>
  </div>
</section> <!-- /featured-project -->

<section class="what-we-do">
  <div class="what-we-do__content">
    <header class="section-header">
      <h3>What We Do</h3>
    </header> <!-- /section-header -->
    <%
        services = ["Finishing", "Remodeling", "Development"] 
    %>
    <% services.each do |service| %>
    <div class="service-description <%= service.downcase %>">
        <header class="service-description__header">
          <%= content_tag :h3, service %>
        </header> <!-- /service-description__header -->
        <div class="service-description__body">
          <p><%= lorem.sentences 4 %>.</p>
        </div><!-- /body -->
      </div> <!-- /service-description -->
    <% end %>
  </div>
</section> <!-- /what-we-do -->

