<section class="who-we-are">
  <header class="section-header">
    <h3>Who We Are</h3>
  </header> <!-- /section-header -->
  <p>We're experts in <%= link_to "Residential", "#" %> and <%= link_to "Commercial", "#" %> construction projects.</p>
  <%= content_tag :button, "Contact Us To Get Started", class: "btn btn--primary" %>
</section> <!-- /who-we-are -->
<section class="featured-project">
  <header class="section-header">
    <h3>Featured Residential Project</h3>
  </header> <!-- /section-header -->
  <h2>Kitchen Remodel</h2>
  <p><%= lorem.sentence %>.</p>
  <% 3.times do %>
    <%= link_to image_tag("http://placehold.it/300x300"), "#" %>
  <% end %>
  <div class="project-services">
    <h4>Services</h4>
    <ul class="project-services__list">
      <%
        services = {
          "Demolition"   => "/",  
          "Construction" => "/",  
          "Painting"     => "/",  
          "Plumbing"     => "/"  
        }  
      %>
      <% services.each do |name, url| %>
        <%= content_tag :li, link_to(name, url) %>
      <% end %>
    </ul> <!-- /project-services__list -->
  </div> <!-- /project-services -->
  <div class="testimonial">
    <div class="testimonial__photo">
      <%= image_tag "http://placehold.it/90x90" %>
    </div> <!-- /photo -->
    <div class="testimonial__text">
      <p><%= lorem.sentences 2 %>.</p>
      <%= link_to "Mary Jones", "#", class: "testimonial__source" %>
    </div> <!-- /testimonial__text -->
  </div> <!-- /testimonial -->
  <%= content_tag :button, "View Complete Project", class: "btn btn--secondary" %>
</section> <!-- /featured-project -->

<section class="what-we-do">
  <header class="section-header">
    <h3>What We Do</h3>
  </header> <!-- /section-header -->
